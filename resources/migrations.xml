  <changeSet id="0" author="cliff">
    <preConditions onFail="CONTINUE">
      <dbms type="postgresql"/>
    </preConditions>
    <createProcedure>
      CREATE OR REPLACE FUNCTION update_time() RETURNS trigger
      LANGUAGE plpgsql
      AS $function$
      BEGIN
      NEW.updated_at := CURRENT_TIMESTAMP;
      RETURN NEW;
      END;
      $function$;
    </createProcedure>
    <rollback>
      DROP FUNCTION update_times();
    </rollback>
  </changeSet>
