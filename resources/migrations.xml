  <changeSet id="23" author="greg">
    <preConditions onFail="MARK_RAN">
      <not>
        <sqlCheck expectedResult="t">
          select exists (select 1 from pg_type where typname = 'relationship_type');
        </sqlCheck>
    </not>
    </preConditions>
    <sql>
      CREATE TYPE relationship_type AS enum (
        'equal',
        'notEqual',
        'empty',
        'notEmpty',
        'contain',
        'notContain',
        'regExp'
      );
    </sql>
  </changeSet>
